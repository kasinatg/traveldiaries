<% if comment == @current_comment %>
<div id="current_comment" class="article">
<% else %>
<div class="article">
<% end %>

  <div class="row">
    <p class=><%= comment.description %></p>
    <span>created on <%= comment.createddate %></span>
    <% if user_signed_in?  %>
        <span><%= link_to('Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, remote:true, :class=>'btn btn-default') %></span>
    <% end %>
  </div>
  <hr>
</div>